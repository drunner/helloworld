#!/bin/bash

SERVICENAME="$1"
CONTAINERNAME="$2"

# This script is run inside the container, not on the host.
# dr mounts the service directory on the host to /dr
# We need to copy scripts etc into there.

# help file for dr
echo "simple example of dr compliant container." > /dr/txt/shorthelp.txt

# scripts that dr can run. The Dockerfile already ensured they are owned by druser.
cp -a /opt/forhost/* /dr/bin/

echo "drinstall completed succesfully."
